package patterns;
import java.util.*;
public class patterns_4 {
// to print pattern inverted half pyramid 
//	**** 
//	*** 
//	** 
//	* 

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		int n=3;
		for(int i=n;i>=0;i--) {
			for(int j=0;j<=i;j++) {
				System.out.print("*");
			}
			System.out.println(" ");
		}
		System.out.println();
	}

}
